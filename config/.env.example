# EnergyAI SDK - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# AZURE OPENAI CONFIGURATION
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-01

# =============================================================================
# ALTERNATIVE: OPENAI CONFIGURATION (if not using Azure)
# =============================================================================
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4

# =============================================================================
# TELEMETRY & MONITORING
# =============================================================================
# Langfuse for LLM observability
LANGFUSE_PUBLIC_KEY=pk_lf_your_public_key_here
LANGFUSE_SECRET_KEY=sk_lf_your_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# Azure Monitor for application insights
AZURE_MONITOR_CONNECTION_STRING=InstrumentationKey=your_instrumentation_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENERGYAI_APP_HOST=127.0.0.1
ENERGYAI_APP_PORT=8000
ENERGYAI_APP_DEBUG=true
ENERGYAI_APP_TITLE=EnergyAI Development Platform
ENERGYAI_APP_VERSION=1.0.0
ENERGYAI_APP_DESCRIPTION=AI agent platform for energy analytics

# =============================================================================
# LOGGING
# =============================================================================
ENERGYAI_LOG_LEVEL=INFO

# =============================================================================
# MIDDLEWARE & SECURITY
# =============================================================================
ENERGYAI_ENABLE_CORS=true
ENERGYAI_API_KEY_HEADER=X-API-Key
ENERGYAI_RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
ENERGYAI_CACHE_TTL_SECONDS=300
ENERGYAI_ENABLE_CACHE=true
